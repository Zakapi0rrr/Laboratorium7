<Window x:Class="Laboratorium7.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="SearchTextBox" Margin="5" Width="300" Height="30"/>

            <RadioButton x:Name="EmailRadioButton" Content="Zawiera email" Margin="5" Checked="RadioButton_Checked"/>
            <RadioButton x:Name="PhoneRadioButton" Content="Zawiera telefon" Margin="5" Checked="RadioButton_Checked"/>
            <RadioButton x:Name="LastNameRadioButton" Content="Zawiera nazwisko" Margin="5" Checked="RadioButton_Checked"/>

            <Button Content="Szukaj" Click="SearchButton_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
