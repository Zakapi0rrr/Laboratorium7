<Window x:Class="Laboratorium7.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj kontakt" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Imię:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="0" Margin="80,5,0,5" Width="250"/>

        <TextBlock Text="Nazwisko:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="LastNameBox" Grid.Row="1" Margin="80,5,0,5" Width="250"/>

        <TextBlock Text="Miasto:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="CityBox" Grid.Row="2" Margin="80,5,0,5" Width="250"/>

        <TextBlock Text="Wiek:" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="AgeBox" Grid.Row="3" Margin="80,5,0,5" Width="250"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zapisz" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Anuluj" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
